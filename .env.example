# AI Provider API Keys
# OpenAI (Required for GPT-4, GPT-5, o1 models and DALL-E image generation)
OPENAI_API_KEY=sk-proj-your-api-key-here

# Anthropic (Optional - for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# xAI (Optional - for Grok models)
XAI_API_KEY=xai-your-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./design_thinking.db

# Application Secret Key
SECRET_KEY=your_secret_key_here

# Application Settings
DEBUG=True
APP_NAME=Design Thinking AI Agent

# OpenAI Model Configuration (Optional)
# OPENAI_MODEL=gpt-4.1  # Default model
# OPENAI_TEMPERATURE=0.7  # Creativity level (0.0-1.0)
# OPENAI_MAX_TOKENS=16000  # Maximum response length (increased for comprehensive outputs)

# Jira OAuth 2.0 Integration (Optional - for Implement stage)
# Required for exporting tasks to Jira
# See SETUP_JIRA.md for detailed setup instructions

# OAuth 2.0 App Credentials (from Atlassian Developer Console)
JIRA_OAUTH_CLIENT_ID=your-oauth-client-id-here
JIRA_OAUTH_CLIENT_SECRET=your-oauth-client-secret-here
JIRA_OAUTH_REDIRECT_URI=http://localhost:8501/oauth_callback

# Token Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# IMPORTANT: Keep this secret! If lost, all OAuth tokens will be unrecoverable
ENCRYPTION_KEY=your-generated-encryption-key-here
